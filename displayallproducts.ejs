<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <style>
    
    .main{
        height: 100vh; 
            width: 100vw; 
            background-color:#a3a0a9;
            display: flex;
            justify-content: center;
            align-items: center;

    }
    .sub{
        height: auto;
            width: 60%;
            background-color: #efeff0;
            border-radius: 15px;
            padding: 10px;
        }
        .headstyle{
            font-family: kanit;
            font-weight: bold;
            font-size: 24px;
        }
        
    

  </style>
    </head>
    <body>
        <div class="main">
            <div class="sub">
                <div class="col-sm-6" style="display: flex; flex-direction: row; width: 98%;">
                    <div style="display: flex; flex-direction: row; ">
                    <span><img src="/images/Logo.png" width="35px"></span>
                    <span class="headstyle" >Product List</span>
                    </div>
                    <div style="display: flex; flex-direction: row; margin-left: auto;">
                        <a href="/product/productinterface"><img src="/images/add.png" width="35px"></a>
                    </div>
                </div>
                
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">S.No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Packaging</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Price</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.map((item,i)=>{ %>
                    <tr>
                        <th scope="row"><%=i+1 %></th>
                        <td><%=item.productid%>/<%=item.productname %></td>
                        <td><%=item.categoryname%>/<%=item.producttype %></td>
                        <td><%=item.packaging%>/<%=item.quantity %></td>
                        <td><%=item.weight%>/<%=item.weighttype %></td>
                        <td><s><%=item.price%></s><br><%=item.offerprice %></td>
                        <td><a href="/product/showproductpicturetoedit?pid=<%=item.productid %>&productpicture=<%=item.productpicture %>&productname=<%=item.productname %>"><img src="/images/<%=item.productpicture %>" style="width: 50px; height: 50px; border-radius: 5px;"></a></td>
                        <td><a href="/product/showproducttoedit?pid=<%=item.productid %>"><img src="/images/Edit.png" alt="" style="width: 50px; height: 50px;"" ></a></td>
                        
                    </tr>
                    <% }) %>
            </tbody>
            
        </table>
    </div>
    </div>
        
    </body>
</html>
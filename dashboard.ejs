<html>
    <head>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/2698d7b38b.js" crossorigin="anonymous"></script>
       <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        .main{
            width: 100%;
            height: 100vh;
            background-color: #ccc;
            display: flex;
            flex-direction: column;
        }
        .box{
            width: 100%;
            height: 50px;
            background-color: #000;
        }
        .appbarstyle{
            width: 98%;
            display: flex;
            align-items: center;
        }
        .logoname{
            font-family: kanit;
            font-size: 32px;
            font-weight: bold;
            color: white;
            margin-left: 1%;
            
        }
        .logout{
            color: white;
            font-size: 16px;
            font-family: kanit;
            font-weight: bold;
            margin-left: auto;
            
        }
        .logout a{
            text-decoration: none;
            color: #fff;
        }
        .sidebar{
            background-color: skyblue;
            height: 100vh;
            width: 15%;
            
        }
        .admin-name{
            font-family: kanit;
            font-size: 16px;
            font-weight: bold;
            display: flex;
            justify-content: center;
        }
        .admin-contact{
            font-family: kanit;
            font-size: 12px;
            color: blue;
            font-weight: bold;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .menu{
            font-family: kanit;
            font-size: 16px;
            font-weight: bold;
            display: flex;
            flex-direction: column;
            margin-left: 40px;
        }
        .menu-item{
            margin-top: 20px;
        }
        .content-style{
            margin: 20px;
            height: 90%;
            width: 100%;
        }
       </style>
    </head>
    <body>
        <div class="main">
                            <!--Header-->

            <div class="box">
                <div class="appbarstyle">
                    <span class="logoname">Digital World</span>
                    <span class="logout"><a href="/admin/logout">Logout</a></span>
                </div>
            </div>


            <div style="display: flex; flex-direction: row; height: 90%;">
                <div class="sidebar">
                    <div style="display: flex; justify-content: center; align-items: center; margin: 6px;">
                        <img src="/images/<%=userdata.picture %>" style="width: 70px; height: 70px; border-radius: 35px;">
                    </div>
                    <div class="admin-name">
                        <%=userdata.adminname %>
                    </div>
                    <div class="admin-contact">
                        <div><%=userdata.emailid %></div>
                        <div>+91<%=userdata.mobileno %></div>
                    </div>
                    <div class="menu">
                        <div class="menu-item"> <i class="fa-solid fa-cart-plus"></i> <a style="text-decoration: none; color: #000;" href="/product/productinterface" target="mw">New Product</a></div>
                        <div class="menu-item"> <i class="fa-solid fa-rectangle-list"></i> <a style="text-decoration: none; color: #000;" href="/product/displayallproducts" target="mw">Product List</a></div>
                        <div class="menu-item"> <i class="fa-solid fa-right-from-bracket"></i><a style="text-decoration: none; color: #000;" href="/admin/logout">Logout</a></div>
                    </div>
    
                </div>
                <div class="content-style">
                    <iframe name="mw" width="100%" height="100%" scrolling="no" frameborder="0"></iframe>
                </div>


            </div> 
        </div>


    </body>           

    
</html>